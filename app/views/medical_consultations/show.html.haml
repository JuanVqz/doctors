%nav.level
  .level-left
    .level-item
      %span.icon
        %i.fa.fa-user-md
      %span.is-uppercase información de la consulta

.columns.is-multiline
  .column.is-6
    %p.has-text-grey-light.is-uppercase Datos generales
    .table-container
      %table.table.is-hoverable.is-fullwidth
        %thead
          %tr
            %th Doctor
            %td= @medical_consultation.doctor
          %tr
            %th Paciente
            %td= @medical_consultation.patient
          %tr
            %th Altura
            %td= "#{@medical_consultation.height} cm."
          %tr
            %th Peso
            %td= "#{@medical_consultation.weight} kg."
          %tr
            %th IMC
            %td= number_with_precision(@medical_consultation.imc, precision: 2)
          %tr
            %th Motivo de Consulta
            %td= @medical_consultation.reason
          %tr
            %th Objetivo
            %td= @medical_consultation.objetive

  .column.is-6
    %p.has-text-grey-light.is-uppercase .
    .table-container
      %table.table.is-hoverable.is-fullwidth
        %thead
          %tr
            %th Subjetivo
            %td= @medical_consultation.subjetive
          %tr
            %th Receta
            %td= @medical_consultation.prescription
          %tr
            %th Plan
            %td= @medical_consultation.plan
          %tr
            %th Diagnostico
            %td= @medical_consultation.diagnosis
          %tr
            %th Tratamiento
            %td= @medical_consultation.treatment
          %tr
            %th Observación
            %td= @medical_consultation.observations
          %tr
            %th Fecha de registro
            %td= l @medical_consultation.created_at, format: :long

  .column.is-12
    %p.has-text-grey-light.is-uppercase Resultado de Laboratorio
    .table-container
      %table.table.is-hoverable.is-fullwidth
        %thead
          %tr
            %th Resultados de Laboratorio
            %td= @medical_consultation.lab_results
          %tr
            %th Histopatologia
            %td= @medical_consultation.histopathology
          %tr
            %th Comentarios
            %td= @medical_consultation.comments

.buttons
  = link_to :back, class: "button is-link" do
    %span.icon
      %i.fa.fa-arrow-left
    %span Regresar

  = link_to [:edit, @medical_consultation], "data-tooltip": "Editar", class: "button is-warning tooltip" do
    %span.icon
      %i.fa.fa-edit

  = link_to [@medical_consultation, format: "pdf"], "data-tooltip": "Imprimir", class: "button is-danger tooltip", target: "_blank" do
    %span.icon
      %i.fa.fa-print

  = link_to @medical_consultation.patient, "data-tooltip": "Ir al detalle del paciente", class: "button is-success tooltip is-tooltip-left", style: "margin-left: auto" do
    %span.icon
      %i.fa.fa-user
