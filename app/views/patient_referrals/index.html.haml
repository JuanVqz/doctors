= render "shared/section" do
  %div.flex.flex-col.md:flex-row.md:justify-between
    = render "shared/actions", model: :patient_referral, search_path: nil

= render "shared/section" do
  = render "shared/table" do
    %thead.border-b.border-gray-200.dark:border-gray-700.font-medium
      %tr
        %th{scope: :col, class: "px-6 py-2"} Paciente
        %th{scope: :col, class: "px-6 py-2"} Recibido por
        %th{scope: :col, class: "px-6 py-2"} Fecha
        %th{scope: :col, class: "px-6 py-2"} Acciones
    %tbody
      - @patient_referrals.each do |patient_referral|
        %tr.border-b.border-gray-200.dark:border-gray-700
          %td.whitespace-nowrap.px-6.py-4= patient_referral.patient
          %td.whitespace-nowrap.px-6.py-4= patient_referral.referred_doctor
          %td.whitespace-nowrap.px-6.py-4= time_ago_in_words(patient_referral.created_at)
          %td
            = link_to :imprimir, [patient_referral, format: :pdf], target: :_blank
            = link_to :detalles, patient_referral
