= render "shared/section" do
  %div.flex.flex-col.md:flex-row.md:justify-between
    = render "shared/actions", model: :patient_referral, search_path: nil

= render "shared/section" do
  = render "shared/table" do
    %thead.border-b.border-gray-300.dark:border-gray-700.text-gray-400
      %tr
        %th.py-2{scope: :col} Paciente
        %th.py-2{scope: :col} Recibido por
        %th.py-2{scope: :col} Fecha
        %th.py-2{scope: :col} Acciones
    %tbody
      - @patient_referrals.each do |patient_referral|
        %tr.cursor-pointer.hover:bg-gray-200.dark:hover:bg-gray-700
          %td.whitespace-nowrap.py-4= patient_referral.patient
          %td.whitespace-nowrap.py-4= patient_referral.referred_doctor
          %td.whitespace-nowrap.py-4= time_ago_in_words(patient_referral.created_at)
          %td
            = link_to :imprimir, [patient_referral, format: :pdf], target: :_blank
            = link_to :detalles, patient_referral
