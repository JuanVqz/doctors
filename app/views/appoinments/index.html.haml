= render "shared/section" do
  %div.flex.flex-col.md:flex-row.md:justify-between
    = render "shared/actions", model: :appoinment, search_path: appoinments_path

= render "shared/section" do
  = render "shared/table" do
    %thead.border-b.border-gray-200.dark:border-gray-700.font-medium
      %tr
        %th{scope: :col, class: "px-6 py-2"} Paciente
        %th{scope: :col, class: "px-6 py-2"} Motivo
        %th{scope: :col, class: "px-6 py-2"} Fecha
        %th{scope: :col, class: "px-6 py-2"} Acciones
    %tbody
      - @appoinments.each do |appoinment|
        %tr.border-b.border-gray-200.dark:border-gray-700
          %td.whitespace-nowrap.px-6.py-4= appoinment.patient
          %td.whitespace-nowrap.px-6.py-4= truncate(appoinment.reason, lenght: 50)
          %td.whitespace-nowrap.px-6.py-4= time_ago_in_words(appoinment.created_at)
          %td
            = link_to :print, [appoinment, format: :pdf], target: "_blank"
            = link_to :detalles, appoinment
