%tr
  %td= l appoinment.created_at, format: :not_hour
  %td= truncate(appoinment.reason, lenght: 50)
  %td= truncate(appoinment.prescription, lenght: 50)
  %td
    .buttons.is-right
      = link_to [appoinment, format: "pdf"], "data-tooltip": "Imprimir", class: "button is-danger tooltip", target: "_blank" do
        %i.fa.fa-print

      = link_to appoinment, "data-tooltip": "Detalles", class: "button is-link tooltip" do
        %i.fa.fa-eye
