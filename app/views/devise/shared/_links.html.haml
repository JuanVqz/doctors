.space-y-2
  - if controller_name != 'sessions'
    %p= link_to t('.sign_in'), new_session_path(resource_name), class: link_button

  - if devise_mapping.registerable? && controller_name != 'registrations'
    %p= link_to t('.sign_up'), new_registration_path(resource_name), class: link_button

  - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
    %p= link_to t('.forgot_password'), new_password_path(resource_name), class: link_button

  - if devise_mapping.confirmable? && controller_name != 'confirmations'
    %p= link_to t(".didnt_receive_confirmation_instructions"), new_confirmation_path(resource_name), class: link_button

  - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
    %p= link_to t(".didnt_receive_unlock_instructions"), new_unlock_path(resource_name), class: link_button

  - if devise_mapping.omniauthable?
    - resource_class.omniauth_providers.each do |provider|
      %p= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }
