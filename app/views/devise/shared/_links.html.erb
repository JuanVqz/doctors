<%- if controller_name != 'sessions' %>
  <div class="column is-12">
    <%= link_to "Iniciar sesión", new_session_path(resource_name), class: "has-text-white" %><br />
  </div>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="column is-12">
    <%= link_to "¿Recuperar contraseña?", new_password_path(resource_name), class: "has-text-white" %><br />
  </div>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="column is-12">
    <%= link_to "No recibí el correo de confirmación", new_confirmation_path(resource_name), class: "has-text-white" %><br />
  </div>
<% end -%>
