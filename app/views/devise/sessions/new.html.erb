<div class="box">
  <h2 class="title">Ingrese su Cuenta</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.input :email,
                required: false,
                autofocus: true,
                label: false,
                placeholder: "Correo electronico",
                input_html: { autocomplete: "email", class: "is-large" } %>
    <%= f.input :password,
                required: false,
                label: false,
                placeholder: "Contraseña",
                input_html: { autocomplete: "current-password", class: "is-large" } %>

    <%= f.button :submit, "Iniciar Sesión", class: "button is-block is-large is-fullwidth" %>
  <% end %>

</div>

<div class="columns is-multiline">
  <%= render "devise/shared/links" %>
</div>

