<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-4 md:space-y-6") do |f| %>
  <%= f.input :email,
              required: false,
              autofocus: true,
              label: false,
              placeholder: "Correo electronico",
              input_html: { autocomplete: :email } %>

  <%= f.input :password,
              required: false,
              label: false,
              placeholder: "Contraseña",
              input_html: { autocomplete: "current-password" } %>

  <%= f.button :submit, "Iniciar Sesión", class: "button is-block is-large is-fullwidth" %>
<% end %>
