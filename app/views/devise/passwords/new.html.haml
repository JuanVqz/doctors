= render 'devise/shared/title', title: t('.title')

= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'space-y-4 md:space-y-6' }) do |f|

  = f.input :email, label: false, required: true, autofocus: true, placeholder: t('.email'), input_html: { autocomplete: 'email' }

  = f.button :submit, t('.title')

= render 'devise/shared/links'
