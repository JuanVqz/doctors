<div class="header text-size-11 text-right">
  <strong class="text-uppercase"><%= @appointment.patient %></strong>

  <div>
    <%= age @appointment.patient %>
    <% if @appointment.height.present? %>
      <%= @appointment.height %> cm.
    <% end %>
    <% if @appointment.weight.present? %>
      <%= @appointment.weight %> kg.
    <% end %>
    <% if @appointment.imc.present? %>
      IMC <%= number_with_precision(@appointment.imc, precision: 2) %>
    <% end %>
  </div>

  <div>
    <%= l @appointment.created_at, format: :normal %>
  </div>
</div>

<div class="text-size-11" style="padding-top:40px">
  <%= raw @appointment.prescription %>
</div>
