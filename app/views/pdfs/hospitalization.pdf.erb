<h3 class="text-center">Información de la hospitalización</h3>

<table class="table">
  <thead class="text-center">
    <tr>
      <th>Doctor</th>
      <th>Paciente</th>
    </tr>
  </thead>
  <tbody class="text-center">
    <tr>
      <td><%= @hospitalization.doctor %></td>
      <td><%= @hospitalization.patient %></td>
    </tr>
  </tbody>
</table>

<h3 class="text-center">Detalle de la hospitalización</h3>
<table class="table">
  <thead class="text-center">
    <tr>
      <th>Fecha entrada</th>
      <td><%= @hospitalization.starting %></td>
    </tr>
    <tr>
      <th>Fecha salida</th>
      <td><%= @hospitalization.starting %></td>
    </tr>
    <tr>
      <th>Días de estadia</th>
      <td><%= @hospitalization.days_of_stay %></td>
    </tr>
    <tr>
      <th>Razón de hospitalización</th>
      <td class="text-justify"><%= @hospitalization.reason_for_hospitalization %></td>
    </tr>
    <tr>
      <th>Tratamiento</th>
      <td class="text-justify"><%= @hospitalization.treatment %></td>
    </tr>
  </thead>
</table>
