.card
  %header.card-header
    %p.card-header-title
      %span.icon
        %i.fa.fa-user-md
      %span.is-uppercase información del doctor
  .card-content
    .table-container
      %table.table.is-hoverable.is-fullwidth
        %tr
          %thead
            %tr
              %th Nombre Completo
              %td= @doctor
            %tr
              %th ¿Puede iniciar sesión?
              %td= active(@doctor)
            %tr
              %th Especialidad
              %td= @doctor.specialty
            %tr
              %th Cédula Profesional
              %td= @doctor.professional_card
            %tr
              %th Correo Electrónico
              %td= @doctor.email
    .buttons
      = link_to doctors_path, class: "button is-info" do
        %span.icon
          %i.fa.fa-arrow-left
        %span Regresar

      = link_to edit_doctor_path(@doctor), class: "button is-warning" do
        %span.icon
          %i.fa.fa-edit
        %span Editar
