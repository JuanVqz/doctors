.card{ "data-no-turbolink": true }
  %header.card-header
    %p.card-header-title
      %span.icon
        %i.fa.fa-users
      %span.is-uppercase Información del paciente #{ @patient }
  .card-content
    #tabs.tabs.is-boxed
      %ul
        %li.is-active{ "data-tab": "general" }
          %a
            %span.icon.is-small
              %i.fa.fa-info
            %span Datos Generales
        %li{ "data-tab": "address" }
          %a
            %span.icon.is-small
              %i.fas.fa-map-marker
            %span Domicilio
        %li{ "data-tab": "clinic_history" }
          %a
            %span.icon.is-small
              %i.fas.fa-history
            %span Historial Clinico

    #tabs-content
      %span.is-active{ "data-content": "general" }
        = render "patients/general"
      %span{ "data-content": "address" }
        = render "patients/address"
      %span{ "data-content": "clinic_history" }
        = render "patients/clinic_history"

    %br
    .columns
      .column
        .buttons
          = link_to :back, class: "button is-link" do
            %span.icon
              %i.fa.fa-arrow-left
            %span Regresar
          = link_to [:edit, @patient], class: "button is-warning" do
            %span.icon
              %i.fa.fa-edit
            %span Editar
      .column
        .buttons.is-right
          = link_to new_medical_consultation_path(patient_id: @patient.id), class: "button is-default" do
            %span.icon
              %i.fa.fa-book
            %span Nueva Consulta
          = link_to new_hospitalization_path(patient_id: @patient.id), class: "button is-default" do
            %span.icon
              %i.fa.fa-ambulance
            %span Nueva Hospitalización
