.table-container
  %table.table.is-hoverable.is-fullwidth
    %thead.is-uppercase
      %tr
        %th Fecha
        %th Motivo
        %th Receta
        %th.has-text-right Acciones
    %tbody#medical_consultations
      = render @medical_consultations
    %tfoot
      %tr
        %th{ colspan: 4 }
          #pag_medical_consultations
            = paginate @medical_consultations, remote: true

