.card
  %header.card-header
    %p.card-header-title
      %span.icon
        %i.fa.fa-users
      %span.is-uppercase Pacientes
    = link_to new_patient_path, class: "button is-link" do
      %span.icon
        %i.fa.fa-plus
      %span Registrar Paciente
  .card-content
    .table-container
      %table.table.is-hoverable.is-fullwidth
        %thead.is-uppercase
          %tr
            %th Nombre
            %th Edad
            %th Fecha de Registro
            %th Acciones

        %tbody
          - @patients.each do |patient|
            %tr
              %td= patient
              %td= age patient
              %td= l patient.created_at, format: :day_month_year
              %td
                .buttons
                  = link_to new_medical_consultation_path(patient_id: patient.id), class: "button is-default" do
                    %span.icon
                      %i.fa.fa-book
                    %span Nueva Consulta
                  = link_to new_hospitalization_path(patient_id: patient.id), class: "button is-default" do
                    %span.icon
                      %i.fa.fa-ambulance
                    %span Nueva Hospitalizaci√≥n
                  = link_to patient_path(patient), class: "button is-info" do
                    %span.icon
                      %i.fa.fa-eye
                    %span Detalles
                  = link_to edit_patient_path(patient), class: "button is-warning" do
                    %span.icon
                      %i.fa.fa-edit
                    %span Editar
