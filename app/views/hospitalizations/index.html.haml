= render "shared/section" do
  %div.flex.flex-col.md:flex-row.md:justify-between
    = render "shared/actions", model: :hospitalization, search_path: hospitalizations_path

= render "shared/section" do
  = render "shared/table" do
    %thead.border-b.border-gray-300.dark:border-gray-700.text-gray-400
      %tr
        %th.py-2{scope: :col} Paciente
        %th.py-2{scope: :col} Dias de estadia
        %th.py-2{scope: :col} Acciones
    %tbody
      - @hospitalizations.each do |hospitalization|
        %tr.cursor-pointer.hover:bg-gray-200.dark:hover:bg-gray-700
          %td.whitespace-nowrap.py-4= hospitalization.patient
          %td.whitespace-nowrap.py-4= hospitalization.days_of_stay
          %td
            = link_to :print, [hospitalization, format: :pdf], target: "_blank"
            = link_to :editar, [:edit, hospitalization]
            = link_to :detalles, hospitalization
