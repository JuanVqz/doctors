%nav.level
  .level-left
    .level-item
      %span.icon
        %i.fa.fa-ambulance
      %span.is-uppercase Información de la hospitalización

.columns
  .column.is-6
    %p.has-text-grey-light.is-uppercase Datos generales
    .table-container
      %table.table.is-hoverable.is-fullwidth
        %tr
          %thead
            %tr
              %th Doctor
              %td= @hospitalization.doctor
            %tr
              %th Paciente
              %td= link_to @hospitalization.patient, @hospitalization.patient, target: "_blank"
            %tr
              %th Inicio
              %td= @hospitalization.starting
            %tr
              %th Final
              %td= @hospitalization.ending

  .column.is-6
    %p.has-text-grey-light.is-uppercase .
    .table-container
      %table.table.is-hoverable.is-fullwidth
        %tr
          %thead
            %tr
              %th Días de estancia
              %td= @hospitalization.days_of_stay
            %tr
              %th Razón de hospitalización
              %td= @hospitalization.reason_for_hospitalization
            %tr
              %th Tratamiento
              %td= @hospitalization.treatment
            %tr
              %th Fecha de registro
              %td= l @hospitalization.created_at, format: :long

.buttons
  = link_to :back, class: "button is-link" do
    %span.icon
      %i.fa.fa-arrow-left
    %span Regresar

  = link_to [:edit, @hospitalization], class: "button is-warning" do
    %span.icon
      %i.fa.fa-edit
    %span Editar

  = link_to @hospitalization.patient, class: "button is-success", style: "margin-left: auto" do
    %span.icon
      %i.fa.fa-user
    %span Ir al Detalle del Paciente
