%nav.level
  .level-left
    .level-item
      %span.icon
        %i.fa.fa-ambulance
      %span.is-uppercase Información de la hospitalización
  .level-right
    .level-item
      .buttons
        = link_to :back, class: "button is-link" do
          %span.icon
            %i.fa.fa-arrow-left
          %span Regresar

        = link_to [:edit, @hospitalization, patient_id: @hospitalization.patient], "data-tooltip": "Editar", class: "button is-warning tooltip" do
          %span.icon
            %i.fa.fa-edit

        = link_to [@hospitalization, format: :pdf], "data-tooltip": "Imprimir", class: "button is-danger tooltip", target: "_blank" do
          %span.icon
            %i.fa.fa-print

        = link_to @hospitalization.patient, target: "_blank", "data-tooltip": "Detalle de #{@hospitalization.patient}", class: "button is-success tooltip is-tooltip-left", style: "margin-left: auto" do
          %span.icon
            %i.fa.fa-user

.columns
  .column.is-6
    %p.has-text-grey-light.is-uppercase Datos generales
    .table-container
      %table.table.is-hoverable.is-fullwidth
        %tr
          %thead
            %tr
              %th Doctor
              %td= @hospitalization.doctor
            %tr
              %th Paciente
              %td= @hospitalization.patient
            %tr
              %th= t "activerecord.attributes.hospitalization.starting"
              %td= @hospitalization.starting
            %tr
              %th= t "activerecord.attributes.hospitalization.ending"
              %td= @hospitalization.ending
            %tr
              %th Días de estancia
              %td= @hospitalization.days_of_stay

  .column.is-6
    %p.has-text-grey-light.is-uppercase .
    .table-container
      %table.table.is-hoverable.is-fullwidth
        %tr
          %thead
            %tr
              %th= t "activerecord.attributes.hospitalization.input_diagnosis"
              %td= @hospitalization.input_diagnosis
            %tr
              %th= t "activerecord.attributes.hospitalization.output_diagnosis"
              %td= @hospitalization.output_diagnosis
            %tr
              %th= t "activerecord.attributes.hospitalization.recommendations"
              %td= @hospitalization.recommendations
            %tr
              %th Razón de hospitalización
              %td= @hospitalization.reason_for_hospitalization
            %tr
              %th Tratamiento
              %td= @hospitalization.treatment
            %tr
              %th Fecha de registro
              %td= l @hospitalization.created_at, format: :long

