= render "shared/section" do
  %div.flex.flex-col.md:flex-row.md:justify-between
    = link_to "Regresar", :referred_doctors
    %div.flex.flex-col.md:flex-row.md:space-x-4
      = link_to "Editar", [:edit, @referred_doctor]

= render "shared/section" do
  %h3.mb-4.text-xl.font-bold.text-gray-900.dark:text-white Informaci√≥n
  .grid.gap-4.grid-rows-3.grid-flow-row.md:grid-flow-col.text-xs
    - @referred_doctor.attributes.slice("full_name", "specialty", "phone_number").map do |key, value|
      - if value.present?
        %dl.overflow-x-auto
          %dt= t("activerecord.attributes.referred_doctor.#{key}")
          %dd.text-base.font-semibold= raw value

- if @referred_doctor.address
  = render "shared/section" do
    = render "patients/address", address: @referred_doctor.address
